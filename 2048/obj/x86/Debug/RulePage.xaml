<Page
    x:Class="_2048.RulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2048"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--Page.BottomAppBar>
        <CommandBar>
        </CommandBar>
    </Page.BottomAppBar-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/background.jpg" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="110" />
            <RowDefinition Height="110" />
            <RowDefinition Height="110" />
            <RowDefinition Height="110" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='1' x:Name="RuleText" Grid.Row="0" Text="游戏说明"  Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle3}"/>
        <Grid Grid.Row="3" Background="LemonChiffon" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="1" Height="80" Width="80" Content="32" Background="Pink" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="2" Height="80" Width="80" Content="32" Background="pink" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="3" Height="80" Width="80" Content="64" Background="HotPink" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
        </Grid>
        <Grid Grid.Row="2" Background="LemonChiffon" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Height="80" Width="80" Content="2" Background="PaleTurquoise" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="1" Height="80" Width="80" Content="2" Background="PaleTurquoise" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="2" Height="80" Width="80" Content="4" Background="PowderBlue" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="3" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
        </Grid>
        <Grid Grid.Row="1" Background="LemonChiffon" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="1" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="2" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="3" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
        </Grid>
        <Grid Grid.Row="4" Background="LemonChiffon" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="1" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="2" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
            <Button Grid.Column="3" Height="80" Width="80" Background="White" Style="{StaticResource ButtonStyle2}" Margin="10,10,10,10"/>
        </Grid>
        <TextBlock x:ConnectionId='2' x:Name="RuleText_" Grid.Row="5" Text="移动同方向相邻两个相同数字相加"  HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <Button x:ConnectionId='3' x:Name="start_button" Grid.Row="6" Content="开始游戏" Background="Gray" Height="40" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource ButtonStyle1}"                           />


    </Grid>
</Page>


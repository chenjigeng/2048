<Application
    x:Class="_2048.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2048"
    RequestedTheme="Light">
    <Application.Resources>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock" >
            <Setter Property = "FontSize" Value="110"/>
            <Setter Property="Margin" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Broadway"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button" >
            <Setter Property = "FontSize" Value="30"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="楷体"/>
        </Style>
        <Style x:Key="ButtonStyle1" TargetType="Button" >
            <Setter Property = "FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="楷体"/>
        </Style>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock" >
            <Setter Property = "FontSize" Value="30"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="楷体"/>
        </Style>
        <Style x:Key="TextBlockStyle2" TargetType="TextBlock" >
            <Setter Property = "FontSize" Value="130"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Broadway"/>
        </Style>
        <Style x:Key="TextBlockStyle3" TargetType="TextBlock" >
            <Setter Property = "FontSize" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="楷体"/>
        </Style>
    </Application.Resources>
</Application>

